# Portfolio App Environment Configuration
# Copy this file to .env and update values

# ====================
# Rails Configuration
# ====================
RAILS_ENV=development
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=generate_with_rails_secret
RAILS_LOG_TO_STDOUT=true

# ====================
# Database Configuration
# ====================
DATABASE_URL=postgresql://postgres:password@localhost:5432/portfolio_development
# For Docker: postgresql://postgres:password@db:5432/portfolio_development

# ====================
# Redis Configuration
# ====================
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://redis:6379/0

# ====================
# AWS S3 (for Active Storage in production)
# ====================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=portfolio-uploads

# ====================
# Site Configuration
# ====================
SITE_URL=http://localhost:3000
DOMAIN=localhost

# ====================
# Email Configuration (SendGrid)
# ====================
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Alternative SMTP Configuration
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=

# ====================
# Analytics (Optional)
# ====================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PLAUSIBLE_DOMAIN=

# ====================
# Error Tracking (Optional)
# ====================
SENTRY_DSN=

# ====================
# Social Links (Optional, can be set in admin)
# ====================
DEFAULT_GITHUB_URL=https://github.com/yourusername
DEFAULT_LINKEDIN_URL=https://linkedin.com/in/yourusername
DEFAULT_TWITTER_URL=https://twitter.com/yourusername
