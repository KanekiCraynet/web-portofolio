<% content_for :title, "Contact - Portfolio" %>
<% content_for :description, "Get in touch with me. I'd love to hear about your project and how we can work together." %>

<!-- Page Header -->
<section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-16 sm:py-20 lg:py-24 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/2 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl transform -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl transform translate-x-1/2 translate-y-1/2"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div data-animate="slide-in-up" class="text-center">
      <span class="inline-block px-4 py-1.5 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-blue-200 text-sm font-medium mb-6">Contact</span>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">Get In Touch</h1>
      <p class="text-lg sm:text-xl text-blue-100/80 max-w-2xl mx-auto">Have a question or want to work together? I'd love to hear from you.</p>
    </div>
  </div>
</section>

<div class="bg-slate-50 dark:bg-slate-900 min-h-screen py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-6" data-animate="slide-in-left">
        <!-- Quick Contact Card -->
        <div class="bg-white dark:bg-slate-800 rounded-3xl shadow-xl shadow-slate-900/5 dark:shadow-slate-900/50 p-6 sm:p-8 border border-slate-200 dark:border-slate-700">
          <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center text-white">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
            Let's Connect
          </h2>

          <div class="space-y-5">
            <!-- Email -->
            <a href="mailto:hello@example.com" class="group flex items-center gap-4 p-4 bg-slate-50 dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-700 hover:border-blue-200 dark:hover:border-blue-800 hover:shadow-lg transition-all duration-200">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center text-white group-hover:scale-110 transition-transform shadow-lg shadow-blue-500/25">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Email</p>
                <p class="text-slate-900 dark:text-white font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">hello@example.com</p>
              </div>
            </a>

            <!-- Location -->
            <div class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-700">
              <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-purple-500/25">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Location</p>
                <p class="text-slate-900 dark:text-white font-semibold">Indonesia</p>
              </div>
            </div>

            <!-- Availability Status -->
            <div class="flex items-center gap-4 p-4 bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl border border-green-200 dark:border-green-800">
              <div class="relative">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-green-500/25">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <span class="absolute -top-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white dark:border-slate-800 animate-pulse"></span>
              </div>
              <div>
                <p class="text-xs font-medium text-green-600 dark:text-green-400 uppercase tracking-wider">Status</p>
                <p class="text-green-700 dark:text-green-300 font-semibold">Available for Freelance</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links Card -->
        <div class="bg-white dark:bg-slate-800 rounded-3xl shadow-xl shadow-slate-900/5 dark:shadow-slate-900/50 p-6 sm:p-8 border border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Find Me Online</h2>
          <div class="flex gap-3">
            <a href="https://github.com" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-slate-100 dark:bg-slate-700 hover:bg-gradient-to-br hover:from-slate-800 hover:to-slate-900 dark:hover:from-slate-600 dark:hover:to-slate-700 text-slate-600 dark:text-slate-300 hover:text-white rounded-xl flex items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-slate-100 dark:bg-slate-700 hover:bg-gradient-to-br hover:from-blue-600 hover:to-blue-700 text-slate-600 dark:text-slate-300 hover:text-white rounded-xl flex items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-blue-500/25">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
            <a href="https://twitter.com" target="_blank" rel="noopener noreferrer"
               class="w-12 h-12 bg-slate-100 dark:bg-slate-700 hover:bg-gradient-to-br hover:from-slate-800 hover:to-slate-900 text-slate-600 dark:text-slate-300 hover:text-white rounded-xl flex items-center justify-center transition-all duration-300 hover:scale-110 hover:shadow-lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Response Time -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-3xl p-6 sm:p-8 border border-blue-200 dark:border-blue-800">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-500 rounded-xl flex items-center justify-center text-white shadow-lg shadow-blue-500/25 flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-1">Quick Response</h3>
              <p class="text-slate-600 dark:text-slate-400 text-sm">I typically respond to messages within 24 hours. Looking forward to hearing from you!</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3" data-animate="slide-in-right">
        <div class="bg-white dark:bg-slate-800 rounded-3xl shadow-xl shadow-slate-900/5 dark:shadow-slate-900/50 p-6 sm:p-8 lg:p-10 border border-slate-200 dark:border-slate-700">
          <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Send a Message</h2>
          <p class="text-slate-600 dark:text-slate-400 mb-8">Fill out the form below and I'll get back to you as soon as possible.</p>

          <%= form_with model: @message, url: messages_path, class: "space-y-6" do |f| %>
            <% if @message.errors.any? %>
              <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-2xl p-4">
                <div class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <p class="text-sm font-semibold text-red-700 dark:text-red-400 mb-1">Please fix the following errors:</p>
                    <ul class="list-disc list-inside text-sm text-red-600 dark:text-red-400 space-y-1">
                      <% @message.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="grid sm:grid-cols-2 gap-6">
              <!-- Name -->
              <div>
                <%= f.label :name, class: "block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2" %>
                <%= f.text_field :name,
                    class: "w-full px-4 py-3.5 bg-slate-50 dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:border-blue-500 dark:focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-200",
                    placeholder: "John Doe" %>
              </div>

              <!-- Email -->
              <div>
                <%= f.label :email, class: "block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2" %>
                <%= f.email_field :email,
                    class: "w-full px-4 py-3.5 bg-slate-50 dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:border-blue-500 dark:focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-200",
                    placeholder: "john@example.com" %>
              </div>
            </div>

            <!-- Subject -->
            <div>
              <%= f.label :subject, class: "block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2" %>
              <%= f.text_field :subject,
                  class: "w-full px-4 py-3.5 bg-slate-50 dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:border-blue-500 dark:focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-200",
                  placeholder: "Project Inquiry" %>
            </div>

            <!-- Message -->
            <div>
              <%= f.label :body, "Message", class: "block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2" %>
              <%= f.text_area :body,
                  rows: 6,
                  class: "w-full px-4 py-3.5 bg-slate-50 dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-700 rounded-xl text-slate-900 dark:text-white placeholder-slate-400 dark:placeholder-slate-500 focus:border-blue-500 dark:focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-200 resize-none",
                  placeholder: "Tell me about your project, goals, and how I can help..." %>
            </div>

            <!-- Submit Button -->
            <div class="pt-2">
              <%= f.submit "Send Message",
                  class: "w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white font-semibold text-lg rounded-xl shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/30 transition-all duration-300 hover:-translate-y-0.5 cursor-pointer flex items-center justify-center gap-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
