<% content_for :title, "Login" %>

<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Admin Login</h2>
      <p class="mt-2 text-gray-600">Sign in to manage your portfolio</p>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <% if flash[:alert] %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
          <p class="text-red-600"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "admin@example.com",
              autofocus: true,
              autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password,
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "••••••••",
              autocomplete: "current-password" %>
        </div>

        <div>
          <%= f.submit "Sign In",
              class: "w-full bg-blue-600 text-white py-3 px-6 rounded-md font-medium hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <%= link_to "← Back to Portfolio", root_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>
</div>
