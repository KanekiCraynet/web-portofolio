<% flash.each do |type, message| %>
  <% alert_class = case type.to_s
                   when "notice", "success" then "bg-green-100 border-green-500 text-green-800"
                   when "alert", "error" then "bg-red-100 border-red-500 text-red-800"
                   when "warning" then "bg-yellow-100 border-yellow-500 text-yellow-800"
                   else "bg-blue-100 border-blue-500 text-blue-800"
                   end %>

  <div class="<%= alert_class %> border-l-4 p-4 mb-4 mx-auto max-w-6xl"
       data-controller="flash"
       data-flash-hide-after-value="5000">
    <div class="flex justify-between items-center">
      <div class="flex items-center">
        <% if type.to_s == "notice" || type.to_s == "success" %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        <% elsif type.to_s == "alert" || type.to_s == "error" %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        <% end %>
        <p class="text-sm font-medium"><%= message %></p>
      </div>
      <button type="button"
              class="text-current opacity-50 hover:opacity-100"
              data-action="click->flash#dismiss">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
