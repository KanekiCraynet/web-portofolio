<%= form_with model: [:admin, @experience], class: "space-y-6" do |f| %>
  <% if @experience.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="list-disc list-inside text-red-600">
        <% @experience.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :company, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :company, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :role, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :location, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :start_date, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :end_date, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :current, class: "h-4 w-4 text-blue-600 border-gray-300 rounded mr-2" %>
      <%= f.label :current, "Currently working here", class: "text-sm text-gray-700" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", admin_experiences_path, class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
