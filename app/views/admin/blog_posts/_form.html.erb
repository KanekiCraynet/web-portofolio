<%= form_with model: [:admin, @blog_post], class: "space-y-6" do |f| %>
  <% if @blog_post.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="list-disc list-inside text-red-600">
        <% @blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :excerpt, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :excerpt, rows: 2, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :content, rows: 12, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :published, class: "h-4 w-4 text-blue-600 border-gray-300 rounded mr-2" %>
    <%= f.label :published, "Published", class: "text-sm text-gray-700" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", admin_blog_posts_path, class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
