<%= form_with model: [:admin, @project], class: "space-y-6" do |f| %>
  <% if @project.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="list-disc list-inside text-red-600">
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :technologies, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :technologies, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "Ruby on Rails, PostgreSQL, Tailwind CSS" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :live_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.url_field :live_url, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "https://example.com" %>
    </div>

    <div>
      <%= f.label :github_url, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.url_field :github_url, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "https://github.com/..." %>
    </div>
  </div>

  <div class="flex gap-6">
    <div class="flex items-center">
      <%= f.check_box :published, class: "h-4 w-4 text-blue-600 border-gray-300 rounded mr-2" %>
      <%= f.label :published, "Published", class: "text-sm text-gray-700" %>
    </div>

    <div class="flex items-center">
      <%= f.check_box :featured, class: "h-4 w-4 text-blue-600 border-gray-300 rounded mr-2" %>
      <%= f.label :featured, "Featured", class: "text-sm text-gray-700" %>
    </div>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", admin_projects_path, class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
