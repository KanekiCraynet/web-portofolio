<% content_for :title, "Projects" %>

<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Projects</h1>
    <%= link_to "Add Project", new_admin_project_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Technologies</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900"><%= project.title %></td>
            <td class="px-6 py-4 text-gray-600"><%= truncate(project.technologies.to_s, length: 40) %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 py-1 text-xs rounded-full <%= project.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= project.published? ? 'Published' : 'Draft' %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= link_to "Edit", edit_admin_project_path(project), class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <%= link_to "Delete", admin_project_path(project), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
