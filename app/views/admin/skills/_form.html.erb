<%= form_with model: [:admin, @skill], class: "space-y-6" do |f| %>
  <% if @skill.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="list-disc list-inside text-red-600">
        <% @skill.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :category, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :category, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "e.g., Backend, Frontend, DevOps" %>
    </div>

    <div>
      <%= f.label :proficiency, "Proficiency (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :proficiency, min: 0, max: 100, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :icon, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :icon, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500", placeholder: "Icon name or URL" %>
    </div>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
    <%= link_to "Cancel", admin_skills_path, class: "bg-gray-200 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
