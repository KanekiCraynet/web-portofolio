<% content_for :title, "Blog - Portfolio" %>
<% content_for :description, "Read my latest thoughts, tutorials, and insights on web development, Ruby on Rails, and modern technologies." %>

<!-- Page Header -->
<section class="bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900 text-white py-16 sm:py-20 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-0 right-0 w-64 sm:w-96 h-64 sm:h-96 bg-blue-500 rounded-full filter blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-48 sm:w-72 h-48 sm:h-72 bg-purple-500 rounded-full filter blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div data-animate="slide-in-up" class="text-center sm:text-left">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <span>Developer Blog</span>
      </div>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-lg sm:text-xl text-gray-300 max-w-2xl">
        Thoughts, tutorials, and insights on web development, Ruby on Rails, and modern technologies.
      </p>
    </div>
  </div>
</section>

<% if @blog_posts.any? %>
  <!-- Featured Post (First Post) -->
  <% featured_post = @blog_posts.first %>
  <section class="bg-white py-8 sm:py-12 border-b">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <article class="group" data-animate="fade-in-scale">
        <%= link_to blog_post_path(featured_post), class: "block" do %>
          <div class="grid lg:grid-cols-2 gap-6 lg:gap-12 items-center">
            <!-- Featured Image -->
            <div class="relative aspect-[16/10] lg:aspect-[4/3] rounded-2xl overflow-hidden bg-gradient-to-br from-blue-100 to-purple-100">
              <% if featured_post.respond_to?(:featured_image) && featured_post.featured_image.attached? %>
                <%= image_tag featured_post.featured_image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: featured_post.title %>
              <% else %>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="text-center">
                    <svg class="w-16 h-16 sm:w-20 sm:h-20 mx-auto text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                  </div>
                </div>
              <% end %>
              <!-- Featured Badge -->
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-blue-600 text-white text-xs font-semibold rounded-full shadow-lg">
                  Featured
                </span>
              </div>
            </div>

            <!-- Featured Content -->
            <div class="space-y-4">
              <div class="flex flex-wrap items-center gap-3 text-sm">
                <span class="inline-flex items-center gap-1 text-gray-500">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= featured_post.created_at.strftime("%B %d, %Y") %>
                </span>
                <% if featured_post.respond_to?(:reading_time) %>
                  <span class="inline-flex items-center gap-1 text-gray-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= featured_post.reading_time %> min read
                  </span>
                <% end %>
              </div>

              <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
                <%= featured_post.title %>
              </h2>

              <p class="text-gray-600 text-base sm:text-lg leading-relaxed line-clamp-3">
                <% if featured_post.excerpt.present? %>
                  <%= featured_post.excerpt %>
                <% else %>
                  <%= truncate(strip_tags(featured_post.content), length: 200) %>
                <% end %>
              </p>

              <div class="flex items-center gap-2 text-blue-600 font-medium group-hover:gap-4 transition-all">
                <span>Read Article</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </div>
        <% end %>
      </article>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <% remaining_posts = @blog_posts.drop(1) %>
  <% if remaining_posts.any? %>
    <section class="bg-gray-50 py-12 sm:py-16 lg:py-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl font-bold text-gray-900">Latest Articles</h2>
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <span class="font-medium text-blue-600"><%= @blog_posts.count %></span>
            <span>articles published</span>
          </div>
        </div>

        <!-- Responsive Grid: 1 col mobile, 2 col tablet, 3 col desktop -->
        <div class="grid gap-6 sm:gap-8 sm:grid-cols-2 lg:grid-cols-3" data-animate-stagger="fade-in-up">
          <% remaining_posts.each do |post| %>
            <article class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col" data-animate-child>
              <%= link_to blog_post_path(post), class: "flex flex-col h-full" do %>
                <!-- Post Thumbnail -->
                <div class="relative aspect-[16/10] bg-gradient-to-br from-gray-100 to-gray-200 overflow-hidden">
                  <% if post.respond_to?(:featured_image) && post.featured_image.attached? %>
                    <%= image_tag post.featured_image, class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: post.title %>
                  <% else %>
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-12 h-12 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                    </div>
                  <% end %>
                </div>

                <!-- Post Content -->
                <div class="flex-1 p-5 sm:p-6 flex flex-col">
                  <!-- Meta -->
                  <div class="flex items-center gap-3 text-xs sm:text-sm text-gray-500 mb-3">
                    <span class="inline-flex items-center gap-1">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <%= post.created_at.strftime("%b %d, %Y") %>
                    </span>
                    <% if post.respond_to?(:reading_time) && post.reading_time.present? %>
                      <span class="inline-flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <%= post.reading_time %> min
                      </span>
                    <% end %>
                  </div>

                  <!-- Title -->
                  <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                    <%= post.title %>
                  </h3>

                  <!-- Excerpt -->
                  <p class="text-gray-600 text-sm sm:text-base line-clamp-3 flex-1">
                    <% if post.excerpt.present? %>
                      <%= post.excerpt %>
                    <% else %>
                      <%= truncate(strip_tags(post.content), length: 120) %>
                    <% end %>
                  </p>

                  <!-- Read More -->
                  <div class="mt-4 flex items-center gap-2 text-blue-600 text-sm font-medium group-hover:gap-3 transition-all">
                    <span>Read more</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              <% end %>
            </article>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @pagy && @pagy.pages > 1 %>
          <nav class="mt-12 sm:mt-16 flex justify-center" aria-label="Blog pagination" data-animate="fade-in">
            <div class="flex flex-wrap items-center justify-center gap-2 sm:gap-3 bg-white rounded-xl shadow-lg p-2">
              <% if @pagy.prev %>
                <%= link_to blog_posts_path(page: @pagy.prev), class: "flex items-center gap-1 sm:gap-2 px-3 sm:px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors text-sm sm:text-base" do %>
                  <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  <span class="hidden sm:inline">Previous</span>
                <% end %>
              <% end %>

              <div class="flex items-center gap-1">
                <% start_page = [@pagy.page - 2, 1].max %>
                <% end_page = [@pagy.page + 2, @pagy.pages].min %>

                <% if start_page > 1 %>
                  <%= link_to "1", blog_posts_path(page: 1), class: "w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors text-sm sm:text-base" %>
                  <% if start_page > 2 %>
                    <span class="px-1 sm:px-2 text-gray-400">...</span>
                  <% end %>
                <% end %>

                <% (start_page..end_page).each do |page| %>
                  <%= link_to page.to_s, blog_posts_path(page: page), class: "w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center rounded-lg transition-colors text-sm sm:text-base #{page == @pagy.page ? 'bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow-md' : 'text-gray-600 hover:bg-blue-50 hover:text-blue-600'}" %>
                <% end %>

                <% if end_page < @pagy.pages %>
                  <% if end_page < @pagy.pages - 1 %>
                    <span class="px-1 sm:px-2 text-gray-400">...</span>
                  <% end %>
                  <%= link_to @pagy.pages.to_s, blog_posts_path(page: @pagy.pages), class: "w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center rounded-lg text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors text-sm sm:text-base" %>
                <% end %>
              </div>

              <% if @pagy.next %>
                <%= link_to blog_posts_path(page: @pagy.next), class: "flex items-center gap-1 sm:gap-2 px-3 sm:px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors text-sm sm:text-base" do %>
                  <span class="hidden sm:inline">Next</span>
                  <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </nav>
        <% end %>
      </div>
    </section>
  <% end %>
<% else %>
  <!-- Empty State -->
  <section class="bg-gray-50 py-16 sm:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center" data-animate="fade-in-scale">
        <div class="w-20 h-20 sm:w-24 sm:h-24 mx-auto mb-6 bg-gradient-to-br from-blue-100 to-purple-100 rounded-full flex items-center justify-center">
          <svg class="w-10 h-10 sm:w-12 sm:h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">No Blog Posts Yet</h2>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
          I'm working on some exciting content. Check back soon for articles on web development and technology!
        </p>
        <%= link_to root_path, class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-500 text-white font-medium rounded-xl shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span>Back to Home</span>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<!-- Newsletter CTA -->
<section class="bg-gradient-to-r from-blue-600 to-indigo-600 py-12 sm:py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div data-animate="fade-in-up">
      <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">Stay Updated</h2>
      <p class="text-blue-100 mb-8 max-w-2xl mx-auto text-sm sm:text-base">
        Get notified when I publish new articles. No spam, just valuable content on web development.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
        <input type="email"
               placeholder="Enter your email"
               class="flex-1 px-4 py-3 rounded-xl bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-blue-200 focus:outline-none focus:ring-2 focus:ring-white/50 transition-all text-sm sm:text-base">
        <button type="button"
                class="px-6 py-3 bg-white text-blue-600 font-semibold rounded-xl hover:bg-blue-50 transition-colors shadow-lg text-sm sm:text-base whitespace-nowrap">
          Subscribe
        </button>
      </div>
    </div>
  </div>
</section>
