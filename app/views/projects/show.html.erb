<% content_for :title, "#{@project.title} - Projects - Portfolio" %>
<% content_for :description, truncate(@project.description, length: 160) %>

<!-- Project Header -->
<section class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-4">
      <%= link_to "â† Back to Projects", projects_path, class: "text-blue-300 hover:text-blue-200 text-sm" %>
    </div>
    <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= @project.title %></h1>
    <div class="flex flex-wrap items-center gap-4 text-gray-300">
      <% if @project.featured? %>
        <span class="bg-yellow-400 text-yellow-900 text-xs font-bold px-3 py-1 rounded">Featured</span>
      <% end %>
      <span>Added <%= @project.created_at.strftime("%B %Y") %></span>
    </div>
  </div>
</section>

<!-- Project Content -->
<article class="py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Featured Image -->
    <% if @project.featured_image.attached? %>
      <div class="mb-8 rounded-lg overflow-hidden shadow-lg">
        <%= image_tag @project.featured_image.variant(resize_to_limit: [1200, 800]), alt: @project.title, class: "w-full" %>
      </div>
    <% end %>

    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <div class="prose prose-lg max-w-none">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About This Project</h2>
          <div class="text-gray-600 leading-relaxed">
            <%= simple_format(@project.description) %>
          </div>
        </div>

        <!-- Gallery -->
        <% if @project.gallery_images.attached? %>
          <div class="mt-12">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Gallery</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <% @project.gallery_images.each do |image| %>
                <div class="rounded-lg overflow-hidden shadow hover:shadow-lg transition-shadow">
                  <%= image_tag image.variant(resize_to_limit: [400, 300]), alt: "#{@project.title} screenshot", class: "w-full h-48 object-cover" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <div class="bg-gray-50 rounded-lg p-6 sticky top-24">
          <!-- Technologies -->
          <div class="mb-6">
            <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Technologies</h3>
            <div class="flex flex-wrap gap-2">
              <% @project.technologies_array.each do |tech| %>
                <span class="bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full"><%= tech %></span>
              <% end %>
            </div>
          </div>

          <!-- Links -->
          <div class="space-y-3">
            <% if @project.live_url.present? %>
              <%= link_to @project.live_url, target: "_blank", rel: "noopener", class: "flex items-center justify-center gap-2 w-full px-4 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                Live Demo
              <% end %>
            <% end %>

            <% if @project.github_url.present? %>
              <%= link_to @project.github_url, target: "_blank", rel: "noopener", class: "flex items-center justify-center gap-2 w-full px-4 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors" do %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                View Source
              <% end %>
            <% end %>
          </div>

          <!-- Metadata -->
          <div class="mt-6 pt-6 border-t border-gray-200">
            <dl class="space-y-2 text-sm">
              <div class="flex justify-between">
                <dt class="text-gray-500">Status</dt>
                <dd class="font-medium text-gray-900"><%= @project.published? ? "Published" : "Draft" %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Updated</dt>
                <dd class="font-medium text-gray-900"><%= @project.updated_at.strftime("%b %d, %Y") %></dd>
              </div>
            </dl>
          </div>
        </div>
      </aside>
    </div>
  </div>
</article>

<!-- Related Projects -->
<% if @related_projects.present? %>
  <section class="py-12 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Related Projects</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @related_projects.each do |project| %>
          <%= render ProjectCardComponent.new(project: project) %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
