<% content_for :title, "Projects - Portfolio" %>
<% content_for :description, "Browse my portfolio of web development projects showcasing Ruby on Rails, JavaScript, and modern web technologies." %>

<!-- Page Header -->
<section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-16 sm:py-20 lg:py-24 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-50"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div data-animate="slide-in-up" class="text-center">
      <span class="inline-block px-4 py-1.5 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full text-blue-200 text-sm font-medium mb-6">Portfolio</span>
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">My Projects</h1>
      <p class="text-lg sm:text-xl text-blue-100/80 max-w-2xl mx-auto">A collection of my work spanning web applications, APIs, and open-source contributions.</p>
    </div>
  </div>
</section>

<!-- Filter/Search Bar -->
<section class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 py-4 sticky top-16 md:top-18 lg:top-20 z-30 shadow-sm backdrop-blur-sm bg-white/95 dark:bg-slate-800/95">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
      <!-- Results Count -->
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center text-white">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Showing</p>
          <p class="text-lg font-bold text-slate-900 dark:text-white"><%= @projects.count %> Projects</p>
        </div>
      </div>

      <!-- Technology Filters -->
      <% if @technologies.present? %>
        <div class="w-full sm:w-auto overflow-x-auto pb-2 sm:pb-0 -mx-4 sm:mx-0 px-4 sm:px-0">
          <div class="flex flex-nowrap sm:flex-wrap gap-2 min-w-max sm:min-w-0">
            <%= link_to "All", projects_path,
                class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-xl transition-all duration-200 whitespace-nowrap #{params[:tech].blank? ? 'bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow-md shadow-blue-500/25' : 'bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 hover:bg-slate-200 dark:hover:bg-slate-600'}" %>
            <% @technologies.first(6).each do |tech| %>
              <%= link_to tech, projects_path(tech: tech),
                  class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-xl transition-all duration-200 whitespace-nowrap #{params[:tech] == tech ? 'bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow-md shadow-blue-500/25' : 'bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 hover:bg-slate-200 dark:hover:bg-slate-600'}" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Projects Grid -->
<section class="responsive-section bg-slate-50 dark:bg-slate-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @projects.present? %>
      <div class="projects-grid" data-animate-stagger="fade-in-scale">
        <% @projects.each do |project| %>
          <div data-animate-child>
            <%= render ProjectCard3dComponent.new(project: project) %>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @pagy && @pagy.pages > 1 %>
        <nav class="mt-12 lg:mt-16 flex justify-center" aria-label="Pagination" data-animate="fade-in">
          <div class="flex items-center gap-2 bg-white dark:bg-slate-800 rounded-2xl shadow-lg shadow-slate-900/5 dark:shadow-slate-900/50 p-2 border border-slate-200 dark:border-slate-700">
            <!-- Previous Button -->
            <% if @pagy.prev %>
              <%= link_to projects_path(page: @pagy.prev), class: "flex items-center gap-2 px-4 py-2.5 text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/30 rounded-xl transition-colors font-medium" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                <span class="hidden sm:inline">Previous</span>
              <% end %>
            <% else %>
              <span class="flex items-center gap-2 px-4 py-2.5 text-slate-300 dark:text-slate-600 cursor-not-allowed rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                <span class="hidden sm:inline">Previous</span>
              </span>
            <% end %>

            <!-- Page Numbers -->
            <div class="flex items-center gap-1 px-2">
              <% start_page = [@pagy.page - 2, 1].max %>
              <% end_page = [@pagy.page + 2, @pagy.pages].min %>

              <% if start_page > 1 %>
                <%= link_to "1", projects_path(page: 1), class: "w-10 h-10 flex items-center justify-center rounded-xl text-slate-600 dark:text-slate-300 hover:bg-blue-50 dark:hover:bg-blue-900/30 hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium" %>
                <% if start_page > 2 %>
                  <span class="px-2 text-slate-400">...</span>
                <% end %>
              <% end %>

              <% (start_page..end_page).each do |page| %>
                <%= link_to page.to_s, projects_path(page: page), class: "w-10 h-10 flex items-center justify-center rounded-xl transition-all font-medium #{page == @pagy.page ? 'bg-gradient-to-r from-blue-600 to-blue-500 text-white shadow-md shadow-blue-500/25' : 'text-slate-600 dark:text-slate-300 hover:bg-blue-50 dark:hover:bg-blue-900/30 hover:text-blue-600 dark:hover:text-blue-400'}" %>
              <% end %>

              <% if end_page < @pagy.pages %>
                <% if end_page < @pagy.pages - 1 %>
                  <span class="px-2 text-slate-400">...</span>
                <% end %>
                <%= link_to @pagy.pages.to_s, projects_path(page: @pagy.pages), class: "w-10 h-10 flex items-center justify-center rounded-xl text-slate-600 dark:text-slate-300 hover:bg-blue-50 dark:hover:bg-blue-900/30 hover:text-blue-600 dark:hover:text-blue-400 transition-colors font-medium" %>
              <% end %>
            </div>

            <!-- Next Button -->
            <% if @pagy.next %>
              <%= link_to projects_path(page: @pagy.next), class: "flex items-center gap-2 px-4 py-2.5 text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900/30 rounded-xl transition-colors font-medium" do %>
                <span class="hidden sm:inline">Next</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            <% else %>
              <span class="flex items-center gap-2 px-4 py-2.5 text-slate-300 dark:text-slate-600 cursor-not-allowed rounded-xl">
                <span class="hidden sm:inline">Next</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            <% end %>
          </div>
        </nav>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16 lg:py-24" data-animate="fade-in-scale">
        <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/30 dark:to-purple-900/30 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-3">No Projects Yet</h3>
        <p class="text-slate-600 dark:text-slate-400 mb-8 max-w-md mx-auto">Check back soon for exciting projects! In the meantime, feel free to get in touch.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to "Go Back Home", root_path, class: "btn btn-primary btn-lg" %>
          <%= link_to "Contact Me", contact_path, class: "btn btn-secondary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- CTA Section -->
<section class="responsive-section bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700 text-white relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-0 w-96 h-96 bg-white/10 rounded-full blur-3xl transform -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-72 h-72 bg-white/10 rounded-full blur-3xl transform translate-x-1/2 translate-y-1/2"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center px-4" data-animate="fade-in-scale">
    <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4">Have a Project in Mind?</h2>
    <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.</p>
    <%= link_to contact_path, class: "group inline-flex items-center gap-3 px-8 py-4 bg-white text-blue-600 font-semibold text-lg rounded-xl shadow-xl shadow-white/20 hover:shadow-2xl hover:shadow-white/30 transition-all duration-300 hover:-translate-y-1" do %>
      Let's Talk
      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    <% end %>
  </div>
</section>
