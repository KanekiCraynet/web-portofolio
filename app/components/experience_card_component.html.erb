<div class="relative pl-8 pb-8 border-l-2 border-gray-200 last:pb-0">
  <!-- Timeline dot -->
  <div class="absolute left-0 transform -translate-x-1/2 w-4 h-4 rounded-full
              <%= is_current? ? 'bg-green-500' : 'bg-blue-500' %>
              border-4 border-white shadow">
  </div>

  <!-- Content -->
  <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
    <!-- Header -->
    <div class="flex flex-wrap items-start justify-between gap-2 mb-3">
      <div>
        <h3 class="text-lg font-semibold text-gray-900"><%= @experience.role %></h3>
        <p class="text-blue-600 font-medium"><%= @experience.company %></p>
      </div>
      <div class="text-right">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm
                     <%= is_current? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
          <%= is_current? ? "Current" : "#{duration_months} months" %>
        </span>
        <p class="text-sm text-gray-500 mt-1"><%= duration_text %></p>
      </div>
    </div>

    <!-- Description -->
    <% if @experience.description.present? %>
      <div class="text-gray-600 text-sm prose prose-sm max-w-none">
        <%= simple_format(@experience.description) %>
      </div>
    <% end %>

    <!-- Location -->
    <% if @experience.location.present? %>
      <div class="mt-3 flex items-center text-sm text-gray-500">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <%= @experience.location %>
      </div>
    <% end %>
  </div>
</div>
