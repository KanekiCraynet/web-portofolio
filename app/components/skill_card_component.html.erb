<div class="bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
  <div class="flex items-center justify-between mb-2">
    <h4 class="font-medium text-gray-900"><%= @skill.name %></h4>
    <span class="text-xs text-gray-500"><%= proficiency_label %></span>
  </div>

  <div class="w-full bg-gray-200 rounded-full h-2">
    <div class="<%= proficiency_color %> h-2 rounded-full transition-all duration-500"
         style="width: <%= proficiency_percentage %>%">
    </div>
  </div>

  <% if @skill.icon.present? %>
    <div class="mt-2">
      <span class="text-2xl"><%= @skill.icon %></span>
    </div>
  <% end %>
</div>
