<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  <!-- Featured Image -->
  <% if @post.featured_image.attached? %>
    <%= link_to blog_post_path(@post) do %>
      <%= image_tag @post.featured_image.variant(resize_to_limit: [600, 400]),
                    alt: @post.title,
                    class: "w-full h-48 object-cover" %>
    <% end %>
  <% else %>
    <%= link_to blog_post_path(@post) do %>
      <div class="w-full h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
        <svg class="w-16 h-16 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
    <% end %>
  <% end %>

  <!-- Content -->
  <div class="p-6">
    <!-- Meta -->
    <div class="flex items-center text-sm text-gray-500 mb-3">
      <time datetime="<%= @post.published_at&.iso8601 %>"><%= published_date %></time>
      <span class="mx-2">•</span>
      <span><%= reading_time %></span>
    </div>

    <!-- Title -->
    <h2 class="text-xl font-semibold mb-2">
      <%= link_to @post.title, blog_post_path(@post),
                  class: "text-gray-900 hover:text-blue-600 transition" %>
    </h2>

    <!-- Excerpt -->
    <p class="text-gray-600 text-sm mb-4"><%= excerpt %></p>

    <!-- Tags -->
    <% if tags.any? %>
      <div class="flex flex-wrap gap-2">
        <% tags.each do |tag| %>
          <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
            <%= tag %>
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Read More -->
    <div class="mt-4">
      <%= link_to "Read More →", blog_post_path(@post),
                  class: "text-blue-600 hover:text-blue-800 font-medium text-sm" %>
    </div>
  </div>
</article>
