<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group">
  <div class="relative overflow-hidden">
    <% if @project.featured_image.attached? %>
      <%= image_tag featured_image_path, alt: @project.title, class: "w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" %>
    <% else %>
      <div class="w-full h-48 bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
        <span class="text-white text-4xl font-bold"><%= @project.title[0] %></span>
      </div>
    <% end %>
    <% if @project.featured? %>
      <span class="absolute top-2 right-2 bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded">Featured</span>
    <% end %>
  </div>

  <div class="p-6">
    <h3 class="text-lg font-semibold mb-2 text-gray-900 group-hover:text-blue-600 transition-colors">
      <%= link_to @project.title, project_path(@project) %>
    </h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= truncate(@project.description, length: 120) %></p>

    <div class="flex flex-wrap gap-2 mb-4">
      <% technologies.each do |tech| %>
        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full"><%= tech %></span>
      <% end %>
      <% if has_more_technologies? %>
        <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded-full">+<%= remaining_technologies_count %></span>
      <% end %>
    </div>

    <div class="flex gap-3 pt-4 border-t border-gray-100">
      <%= link_to "View Details", project_path(@project), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
      <% if @project.github_url.present? %>
        <%= link_to "GitHub", @project.github_url, target: "_blank", rel: "noopener", class: "text-gray-500 hover:text-gray-700 text-sm" %>
      <% end %>
      <% if @project.live_url.present? %>
        <%= link_to "Live Demo", @project.live_url, target: "_blank", rel: "noopener", class: "text-green-600 hover:text-green-800 text-sm" %>
      <% end %>
    </div>
  </div>
</div>
